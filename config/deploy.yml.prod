service: turbo-native-directory

image: robzolkos/turbonativedirectory

servers:
  web:
    hosts:
      - turbonative.directory
      - hotwirenative.directory

registry:
  username:
    - KAMAL_REGISTRY_USERNAME
  password:
    - KAMAL_REGISTRY_PASSWORD
env:
  secret:
    - RAILS_MASTER_KEY

volumes:
  - storage:/rails/storage

builder:
  cache:
    type: gha
  arch:
    - amd64
